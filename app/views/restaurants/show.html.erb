  <div class="wrapper">
    <div class="large-card">
      <div class="header">
        <h1><%= @restaurant.name %></h1>
        <ul>
          <% @restaurant.reviews.each do |review| %>
          <li>
            <%= review.content %>
          </li>
          <% end %>
        </ul>
        <hr>
      </div>
      <hr>
      <div class="buttons">
        <%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %>

        <%= link_to "Add review", new_restaurant_review_path(@restaurant)  %>

        <%= link_to 'Delete',
        restaurant_path(@restaurant),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
        <%= link_to "Go back", restaurants_path  %>
      </div>
    </div>
  </div>
