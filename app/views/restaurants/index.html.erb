
<h1>Restaurants</h1>
<h3> <%= link_to "Create a new restaurant", new_restaurant_path  %> </h3>

<hr>
<div class="row">
  <% @restaurants.each do |restaurant| %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="card">
      <p> <%= link_to restaurant.name, restaurant_path(restaurant) %></p>
    </div>
  </div>
  <% end %>
</div>

